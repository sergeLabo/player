#:kivy 2.0.0

<Player>:

    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:  # Album scroll
            size_hint_x: 40
            orientation: 'vertical'
            Label:  # Titre
                size_hint_y: 0.05
                font_size: "24dp"
                color: 192, 192, 192, 1
                bold: True
                text: 'Albums'
            ScrollView:  # scroll
                size_hint_y: 0.95
                id: album_scroll


        BoxLayout:  # Player
            size_hint_x: 60
            orientation: 'vertical'
            BoxLayout:  # Image et boutons
                size_hint_y: 0.24
                BoxLayout:
                    orientation: 'horizontal'
                    BoxLayout:  # N° Track
                        BoxLayout:
                            size_hint_x: 0.2
                            BoxLayout:
                                orientation: 'vertical'
                                Label:
                                    color: 0.6, 0.6, 0.6
                                    font_size: "24dp"
                                    text: "Track"
                                Label:
                                    id: track_number
                                    color: 0.55, 0.55, 0.55
                                    font_size: "48dp"
                    BoxLayout:  # Image
                        Image:  # cover
                            id: album_art
                            size_hint_x: 0.8
                            source: "covers/default_cover.png"
                    BoxLayout: # Play Pause Droite Gauche
                        orientation: 'horizontal'
                        BoxLayout:
                            size_hint_x: 0.3
                        BoxLayout:
                            size_hint_x: 0.4
                            orientation: 'vertical'
                            BoxLayout:
                                size_hint_y: 0.33
                            Button:  # play/pause
                                size_hint_y: 0.33
                                id: play_pause
                                background_normal: "images/Play-normal.png"
                                background_down: "images/Play-down.png"
                                on_press: root.play_pause()
                            BoxLayout:
                                size_hint_y: 0.33
                        BoxLayout:
                            size_hint_x: 0.3

            BoxLayout:  # 5 lignes
                size_hint_y: 0.35
                BoxLayout:
                    orientation: 'vertical'
                    Label:  # artist
                        size_hint_y: 0.08
                        id: artist
                        font_name: "fonts/BalooChettan2-Bold.ttf"
                        font_size: "24dp"
                        color: [192, 192, 192, 1]
                        bold: True
                    Label:  # album
                        size_hint_y: 0.08
                        id: album
                        font_name: "fonts/Aileron-Regular.otf"
                        font_size: "24dp"
                        bold: True
                        text_size: self.size
                        valign: "center"
                        halign: "center"
                        color: 192, 192, 192, 1
                    Label:  # Morceau
                        size_hint_y: 0.08
                        id: title
                        font_name: "fonts/BalooChettan2-Regular.ttf"
                        font_size: "24dp"
                        color: 170, 170, 170, 1
                    Slider:  # slider
                        size_hint_y: 0.08
                        id: song_slider
                        value_track: True
                        value_track_color: 0.5, 0.5, 0.5, 1
                        min: 0
                        max: root.maxi
                        step: 1
                        on_touch_up: root.change_position(self.value)
                    Label:  # current_position
                        size_hint_y: 0.08
                        id: current_position
                        font_size: "24dp"
                        color: 192, 192, 192, 1
                        text: "10 | 3:20"
                    BoxLayout:  # une boite pour debug
                        size_hint_y: 0.08
                        orientation: 'horizontal'
                        Label:
                            id: debug
                            color: 0.6, 0.6, 0.6
                            font_size: "12dp"
                            bold: True
                    BoxLayout:  # une boite pour scroll
                        orientation: 'vertical'
                        size_hint_y: 0.46
                        BoxLayout:
                            orientation: 'vertical'
                            ScrollView:  # scroll
                                size_hint_y: 0.9
                                id: tracks_scroll

            BoxLayout:  # Bouton en bas
                size_hint_y: 0.03
                BoxLayout:  # 4 button
                    orientation: 'horizontal'
                    Button:
                        font_size: "20dp"
                        background_color: (2.8, 2.8, 2.8, 1)
                        color: 142, 142, 142, 1
                        bold: True
                        text: 'Eteindre'
                        on_release: root.shutdown()
                    Button:
                        font_size: "20dp"
                        background_color: (2.8, 2.8, 2.8, 1)
                        color: 142, 142, 142, 1
                        bold: True
                        text: 'Quitter'
                        on_release: root.quit()
                    Button:
                        font_size: "20dp"
                        background_color: (2.8, 2.8, 2.8, 1)
                        color: 142, 142, 142, 1
                        bold: True
                        text: 'Options'
                        on_release: app.open_settings()
                    Button:
                        font_size: "20dp"
                        background_color: (2.8, 2.8, 2.8, 1)
                        color: 142, 142, 142, 1
                        bold: True
                        text: 'Mise à jour'
                        on_release: root.app.ask_for_library_and_covers()
